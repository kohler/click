%script

usleep () {
   click -e "DriverManager(wait $1us)"
}

(usleep 5000 && nc localhost 8000 <CSIN >CSOUT) &
click -R -p 8000 -e "Idle -> s :: Switch(0) -> Idle; s[1] -> Idle; DriverManager(wait 1s, stop)"

%file CSIN
read s.config
write hotconfig Idle -> s :: Switch(1) -> Idle; s[1] -> Idle; DriverManager(wait_stop, wait 0.01s, stop)
read s.config
write hotconfig Print
read s.config
write hotconfig Pofdskaofjdsajfdsa
read s.config
write stop true

%expect CSOUT
Click::ControlSocket/1.{{\d+}}
200 Read handler{{.*}}
DATA 1
0200 Write handler{{.*}}
200 Read handler{{.*}}
DATA 1
1520-Write handler{{.*}}error:
520-{{.*}}Print' input 0 unused
520-{{.*}}Print' output 0 unused
520 Router could not be initialized!
200 Read handler{{.*}}
DATA 1
1520-Write handler{{.*}}error:
520 {{.*}}undeclared element{{.*}}
200 Read handler{{.*}}
DATA 1
1200 Write handler{{.*}}
