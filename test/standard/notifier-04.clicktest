%info
Tests downstream nonfull Notifier functionality.

%script
click --simtime CONFIG -h c.count > OUT
click --simtime CONFIG2 -h c.count > OUT2
click --simtime CONFIG3 -h c.count > OUT3

%file CONFIG
i :: InfiniteSource(LIMIT 15)
  -> c :: Counter
  -> q :: NotifierQueue(5)
  -> Idle;
DriverManager(wait 0.1s, stop)

%file CONFIG2
i :: InfiniteSource(LIMIT 15)
  -> c :: Counter
  -> q :: FullNoteQueue(5)
  -> Idle;
DriverManager(wait 0.1s, print i.scheduled, stop)

%file CONFIG3
i :: InfiniteSource(LIMIT 15)
  -> c :: Counter
  -> q :: FullNoteQueue(5)
  -> s :: PullSwitch(1)
  -> Counter(COUNT_CALL 2 s.switch 1)
  -> Discard;
Idle -> [1]s;
DriverManager(wait 0.1s, print i.scheduled, print c.count, write s.switch 0, wait 0.1s, print i.scheduled, stop)

%expect OUT
15

%expect OUT2
false
5

%expect OUT3
false
5
false
7
